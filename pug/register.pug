extends index.pug 

block changeTitle
    title UProfile - Register

block changeWelcomeMess
    div(class="bubble") #[p new!]

block changeContent
    form(id="reg-form" )
        .inputs
            input(id="reg-input-username"       type="username"   name="username"     placeholder="username")
            i(id="reg-if-username"              class="icon-no")
        .inputs
            input(id="reg-input-email"          type="email"      name="email"        placeholder="email")
            i(id="reg-if-email"                 class="icon-no")
        .inputs
            input(id="reg-input-password"       type="password"   name="password"     placeholder="password")
            i(id="reg-if-password"              class="icon-no")
        div(id="instructions" class="instructions" data-scroll="instructions")
            h1 instructions
            ul
                li Password must not be less than 8 characters
                li A good password should contain numbers and uppercase and lowercase letters
                li The super password must contain special characters
        .inputs
            input(id="reg-input-repassword"     type="password"   name="repassword"     placeholder="re password")
            i(id="reg-if-repassword"            class="icon-no")
        div(class="infos-base")
            div(class="check-base")
            a(href="#" id="have-account") have account?
        .buttons
            button(id="reg-button") regester